---
pagination:
  data: wordpress.posts
  size: 1
  alias: post
layout: "base.njk"
permalink: "/post/{{ post.slug }}/"
tags: post
---
<div  class="container">
<div class="col-md-12 border-dark border-bottom p-3 mt-3">
<nav aria-label="breadcrumb">
<ol class="breadcrumb">
<li class="breadcrumb-item"><a href="{{wordpress.config.url}}">Home</a></li>
<li class="breadcrumb-item active" aria-current="page">{{post.title}}</li>
</ol>
</nav>
</div>
</div>
<header class="container">
<div class="col-md-12 p-3 mt-2 mb-5 border-dark  border-bottom">
<h1 class="fw-semibold mt-3"><a href="{{post.url}}" class="none">
{{post.title}}
</a></h1>
</div>
</header>
{% if post.featuredImage %}
<section class="container">
<div class="rounded-3 border border-dark">
<div class="image-wrapper-post rounded-3">
<img class="img-fluid img-cover rounded-3" width="100%" height="100%" 
alt=""
src="{{post.featuredImage}}"/>
</div>
</div>
</section>{% endif %}
<section class="container mt-3 mb-0">
<div class="row p-3 ">
<article class="col-md-8 p-0">
<div class="p-3">
<p class="mb-0">
{% if post.category_names and post.category_names.length > 0 %}
<span class="fw-semibold normal">
{% for cat in post.category_names %}
{# Menggunakan filter slugify untuk membuat link kategori #}
<a href="/category/{{ cat | slugify }}">{{ cat }}</a>{% if not loop.last %}, {% endif %}
{% endfor %}
</span>
{% endif %}
{% if post.author_name %}
| by <span class="fw-semibold text-secondary">
<a href="/author/{{ post.author_name | slugify }}">{{ post.author_name }}</a>
</span>
{% endif %}
| <span class="text-secondary">{{ post.date | readableDate }}</span>
</p>
</div>
<div class="p-3 border-widget-end border-widget-top">
<div class="row p-2">
{% set contentWithIDs = post.content | default('') | addHeadingIDs %}
<content class="content col-md-12 mb-3 mt-3 normal">
{% if wordpress.config.widget_show_toc %}<div class="border border-dark rounded-3 mb-5 tocus">
<h3 class="fw-bold">{{wordpress.config.widget_toc}}</h3>
{{ contentWithIDs | toc | safe }} 
</div>{% endif %}
<p>{% if post.tags and post.tags.length > 0 %}
<div class="tags-list small mt-2">
<strong>Tags:</strong> 
{% for tag in post.tags %}
<a href="/tags/{{ tag | slugify }}" 
class="badge none text-bg-light border me-1">{{ tag }}</a>
{% endfor %}
</div>
{% endif %}</p>
<heading-anchor>
{{ contentWithIDs | safe }}
</heading-anchor>
{% set allWpPosts = collections.wordpressPostsOnly %}
{% set currentTitle = post.title %} 
{% set foundIndex = -1 %}
{% for item in allWpPosts %}
{% if item.data.title == currentTitle %}
{% set foundIndex = loop.index0 %}
{% endif %}
{% endfor %}
{% set prevPost = false %}
{% set nextPost = false %}
{% if foundIndex !== -1 %}
{% set prevPost = allWpPosts[foundIndex + 1] %}
{% set nextPost = allWpPosts[foundIndex - 1] %}
{% endif %}
<div class="post-navigation d-flex justify-content-between mt-5 pt-3 border-top">
{% if prevPost and prevPost.data.title %}
<a href="{{ prevPost.url }}" class="nav-link prev-post">
&larr; {{ prevPost.data.title }}
</a>
{% else %}
<span></span>
{% endif %}
{% if nextPost and nextPost.data.title %}
<a href="{{ nextPost.url }}" class="nav-link next-post">
{{ nextPost.data.title }} &rarr;
</a>
{% else %}
<span></span>
{% endif %}
</div>
</content>
</div>
</div>
</article>
<div class="col-md-4 p-0">
<div class="p-3">
<h3 class="fw-semibold normal mb-1 s33">{{wordpress.config.widget_lastest}}</h3>
</div>
<div class="p-3 border-widget-top">
{% for post in wordpress.posts | limit(3) %}
<div class="col-md-12 mt-3">
<div class="p-1 borderio mt-3">
<div class="rounded-3 mt-1 border border-dark">
<div class="row">
<div class="col-md-8">
<div class="p-3 border-dark border-bottom">
<p class="fw-semibold mb-3 text-widget">
<a href="/post/{{post.slug}}/" class="text-dark">{{post.title}}</a>
</p>
</div>
<p class="row text-secondary mb-0 p-3 smaller">
<span class="col-5">
{{ post.category_names[0] | default('Categories') }}
</span>
<span class="col-7 text-end"> 
 {{ post.date | readableDate }}
</span>
</p>
</div>
<div class="col-md-4">
<div class="image-wrapper-widget rounded-bottom-3">
<a href="/post/{{post.slug}}/"><img class="img-fluid img-cover rounded-bottom-3" width="100%" height="100%" 
alt="{{post.title}}"
src="{{post.featuredImage or wordpress.config.image }}"/></a>
</div>
</div>
</div>
</div>
</div>
</div>
{% endfor %}
<div class="p-3"></div>
<div class="col-md-12 mt-5">
<div class="rounded-3 mt-1 border border-dark p-3 text-center">
<p class="border-bottom border-dark p-3 fw-bold">
{{wordpress.config.widget_social_title}}
</p>
<p class="mt-2">
{% for key, n in wordpress.config.widget_social_list %}
<a title="{{n.title}}" href="{{n.url}}" class="none">
<i class="{{n.icon}} me-3 icon"></i>
</a>
{% endfor %}
</p>
</div>
</div>
</div>
</div>
</div>
</section>

