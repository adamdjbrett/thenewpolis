---
pagination:
  data: collections.categories
  size: 1
  alias: category
  addAllPagesToCollections: true
eleventyExcludeFromCollections: false
eleventyComputed:
  permalink: "category/{{ category.slug }}/index.html" 
  title: "Categories {{ category.name }}"
  description: "{{ category.name }} Content Article List"
layout: base.njk
---
<div class="container">
<div class="col-md-8 mx-auto text-center mt-5 mb-4">
<h1 class="mb-0"><a href="{{page.url}}" class="none">{{ title }}</a></h1>
<h2 class="lead">{{description}}</h2>
</div>
</div>   
<div class="p-3 mt-3 text-center">
<p>{{ author.description }}</p>
</div>
</div>
<article class="container">
<div class="row">
{% for post in category.posts %}
<div class="col-md-4 mb-3 ">
<div class="p-1 borderio">
<div class="rounded-3 border border-dark">
<div class="image-wrapper-sub rounded-top-3">
<a href="/post/{{ post.slug }}/"><img class="img-fluid img-cover rounded-top-3" width="100%" height="100%" 
alt="{{post.title}}"
src="{{post.featuredImage or wordpress.config.image }}"/></a>
</div>
<div class="p-3 border-dark border-bottom">
<h3 class="fw-semibold normal">
<a href="/post/{{post.slug}}/" class="text-dark none">{{post.title}}</a>
</h3>
</div>
<p class="row text-secondary mb-0 p-3">
<span class="col-7"> 
{{ post.category_names[0] | default('Categories') }}
</span>
<span class="col-5 text-end"> 
{{ post.date | readableDate }}
</span>
</p>
</div>
</div>
</div>
{% endfor %}
<p class="text-center mt-3 mb-5 p-3"><a href="/categories/" class="btn btn-outline-dark">All Categories</a></p>
</div>
</article>