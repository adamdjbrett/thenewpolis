---
title: Categories
layout: base.njk
permalink: /categories/
---
<main class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 serif fw-bold">{{ title }}</h1>
        <p class="text-muted">Explore our content by subject and academic discipline.</p>
        <hr class="w-25 mx-auto">
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="category-list border shadow-sm bg-white rounded overflow-hidden">
                {% for category in collections.categories %}
                {% set catPosts = collections.posts | filterByCategory(category) %}
                
                <details class="border-bottom" {% if loop.first %}open{% endif %}>
                    <summary class="p-4 d-flex justify-content-between align-items-center bg-light" style="cursor: pointer; list-style: none;">
                        <h2 class="h4 serif fw-bold mb-0 text-capitalize">{{ category }}</h2>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-dark me-3">{{ catPosts | length }} Posts</span>
                            <span class="text-muted small"><i class="bi bi-chevron-down"></i></span>
                        </div>
                    </summary>
                    
                    <div class="p-4 bg-white">
                        <ul class="list-unstyled ms-3">
                            {%- for post in catPosts | reverse -%}
                            <li class="mb-3 pb-2 border-bottom-dashed d-flex justify-content-between align-items-baseline">
                                <a href="{{ post.url }}" class="text-decoration-none text-dark hover-maroon fw-bold">
                                    {{ post.data.title }}
                                </a>
                                <small class="text-muted ms-3 text-nowrap font-monospace" style="font-size: 0.75rem;">
                                    {{ post.date | readableDate }}
                                </small>
                            </li>
                            {%- endfor -%}
                        </ul>
                        <div class="mt-3">
                            <a href="/category/{{ category | slugify }}/" class="small fw-bold text-uppercase text-decoration-none text-muted">
                                View Category Page &rarr;
                            </a>
                        </div>
                    </div>
                </details>
                {% endfor %}
            </div>
        </div>
    </div>
</main>