---
pagination:
  data: collections.categories
  size: 1
  alias: category
permalink: "/category/{{ category | slugify }}/"
layout: base.njk
---
<main class="container my-5">
    <div class="mb-5 border-bottom pb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a href="/categories/" class="text-decoration-none text-muted">Categories</a></li>
                <li class="breadcrumb-item active text-capitalize" aria-current="page">{{ category }}</li>
            </ol>
        </nav>
        <h1 class="serif fw-bold display-5 text-capitalize">Category: {{ category }}</h1>
        <p class="text-muted">Collection of articles under the <strong>{{ category }}</strong> discipline.</p>
    </div>

    <div class="row g-4">
        {% set postsByCategory = collections.posts | filterByCategory(category) %}
        {% for post in postsByCategory %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm bg-white transition-hover">
                <div style="height: 180px; overflow: hidden;">
                    <img src="{{ post.data.image or metadata.image }}" class="card-img-top w-100 h-100" style="object-fit: cover;" alt="{{ post.data.title }}">
                </div>
                <div class="card-body p-4 d-flex flex-column">
                    <h5 class="card-title serif fw-bold mb-3">
                        <a href="{{ post.url }}" class="text-decoration-none text-dark stretched-link">{{ post.data.title }}</a>
                    </h5>
                    <p class="card-text small text-muted mb-4">
                        {{ post.data.description | truncate(100) }}
                    </p>
                    <div class="mt-auto pt-3 border-top d-flex justify-content-between">
                        <small class="text-muted">{{ post.date | readableDate }}</small>
                        <small class="text-dark fw-bold" style="font-size: 0.7rem;">{{ post.data.author }}</small>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12 text-center py-5">
            <p class="text-muted">No posts found in this category.</p>
        </div>
        {% endfor %}
    </div>
</main>