---
pagination:
  data: collections.authorPages
  size: 1
  alias: authorPage
permalink: /author/{{ authorPage.key }}/
layout: base.njk
---
<main class="container my-5">
    <div class="row">
        <aside class="col-lg-4 mb-5">
            <div class="bg-white p-4 rounded shadow-sm text-center border">
                <img src="{{ authorPage.image or 'https://ui-avatars.com/api/?name=' ~ authorPage.name | urlencode ~ '&size=200&background=000&color=fff' }}" 
     class="rounded-circle mb-4 shadow" 
     width="150" 
     height="150" 
     alt="{{ authorPage.name }}"
     style="object-fit: cover;">
                
                <h2 class="serif fw-bold">{{ authorPage.name }}</h2>
                
                <p class="text-muted small text-uppercase fw-bold border-bottom pb-3 mb-3">
                    Contributor
                </p>
                
                <p class="text-secondary small mb-4">
                    {{ authorPage.bio or "Academic contributor to The New Polis, focusing on critical theory and political theology." }}
                </p>
                
                <div class="d-flex justify-content-center gap-3">
                    {% if authorPage.twitter %}
                        <a href="https://twitter.com/{{ authorPage.twitter }}" class="text-dark small"><i class="bi bi-twitter"></i> Twitter</a>
                    {% endif %}
                    {% if authorPage.website %}
                        <a href="{{ authorPage.website }}" class="text-dark small"><i class="bi bi-globe"></i> Website</a>
                    {% endif %}
                </div>
            </div>
        </aside>

        <div class="col-lg-8 ps-lg-5">
            <h3 class="serif fw-bold mb-4 border-bottom pb-2">Articles by {{ authorPage.name }}</h3>
            
            {% if authorPage.posts.length > 0 %}
                <div class="row g-4">
                    {%- for post in authorPage.posts | reverse -%}
                    <div class="col-md-6">
                        <div class="card h-100 bg-white border-0 shadow-sm transition-hover">
                            <div style="height: 160px; overflow: hidden;">
                                <img src="{{ post.data.image or metadata.image }}" 
                                     class="card-img-top w-100 h-100" 
                                     loading="lazy"
                                     alt="{{ post.data.title }}" 
                                     style="object-fit: cover;">
                            </div>
                            <div class="card-body p-3">
                                <h5 class="serif fw-bold h6 mb-2">
                                    <a href="{{ post.url }}" class="text-dark text-decoration-none stretched-link">
                                        {{ post.data.title }}
                                    </a>
                                </h5>
                                <p class="small text-muted mb-0">
                                    {{ post.date | readableDate }}
                                </p>
                            </div>
                        </div>
                    </div>
                    {%- endfor -%}
                </div>
            {% else %}
                <div class="alert alert-light border">
                    No posts found for this author yet.
                </div>
            {% endif %}

            <div class="mt-5">
                <a href="/blog/" class="btn btn-dark fw-bold text-decoration-none p-0 border-bottom border-dark border-2">
                    &larr; Back to Blog
                </a>
            </div>
        </div>
    </div>
</main>

<style>
    .transition-hover { transition: transform 0.2s ease; }
    .transition-hover:hover { transform: translateY(-3px); }
</style>