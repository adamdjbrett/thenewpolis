---
eleventyComputed:
  title: "{{wordpress.config.tags_title}}"
  description: "{{wordpress.config.tags_description}}"
permalink: /tags/
layout: base.njk
eleventyNavigation:
  key: Tags
  order: 4
---
<div class="container">
<div class="row justify-content-center text-center mb-5">
<div class="col-md-10 mx-auto p-3 p-md-5 mt-3">
<h1>{{wordpress.config.tags_title}}</h1>
<h2 class="lead">{{wordpress.config.tags_description}}</h2>
</div>
{% for tag in collections.tagList | filterTagList | sortAlphabetically %}
{% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<div class="col-md-3 col-6 p-3">
<a href="{{ tagUrl }}" class="btn btn-outline-dark none">
{{ tag }}
</a>
</div>
{% endfor %}

</div>
</div>