---
layout: base.njk
pagination:
  data: collections.posts
  size: 11
  alias: posts
---

<main class="container my-5">
    
    {% if pagination.pageNumber == 0 %}
    {% set latestPost = posts[0] %}
    <section class="latest-featured row g-0 mb-5 shadow-sm border">
        <div class="col-md-6 featured-img-half" 
             style="background-image: url('{{ latestPost.data.image or "https://images.unsplash.com/photo-1505664194779-8beaceb93744?auto=format&fit=crop&w=1000&q=80" }}'); min-height: 400px; background-size: cover; background-position: center;">
        </div>
        <div class="col-md-6 featured-content p-5 d-flex flex-column justify-content-center bg-white">
            <span class="text-uppercase text-muted small fw-bold mb-2">Newest Publication</span>
            <h2 class="display-6 serif fw-bold mb-3">
                <a href="{{ latestPost.url }}" class="text-decoration-none text-dark">{{ latestPost.data.title }}</a>
            </h2>
            <p class="text-secondary mb-4">
                {{ latestPost.data.description | truncate(160) }}
            </p>
            
            <div class="author-box border-0 pt-0 d-flex align-items-center">
                <img src="https://ui-avatars.com/api/?name={{ latestPost.data.author | urlencode }}&background=000&color=fff" class="author-img rounded-circle me-2" alt="{{ latestPost.data.author }}" width="40">
                <span class="small">By <strong>{{ latestPost.data.author }}</strong> &middot; {{ latestPost.date | readableDate }}</span>
            </div>
            <a href="{{ latestPost.url }}" class="btn btn-outline-dark mt-4 btn-sm">Read More</a>
        </div>
    </section>
    {% endif %}

    
    <div class="row g-4">
       
        {% set displayPosts = posts.slice(1) if pagination.pageNumber == 0 else posts %}
        
        {% for post in displayPosts %}
        <div class="col-md-6">
            <div class="news-card h-100 shadow-sm border">
                <img src="{{ post.data.image or metadata.image }}" loading="lazy"
                     class="card-img-top" alt="{{ post.data.title }}" style="height: 250px; object-fit: cover;">
                <div class="card-body p-4">
                    <span class="small text-muted text-uppercase fw-bold">{{ post.data.tags[0] or "Article" }}</span>
                    <h3 class="card-title mt-2 serif">
                        <a href="{{ post.url }}" class="text-decoration-none text-dark">{{ post.data.title }}</a>
                    </h3>
                    <p class="card-text small text-secondary">
                        {{ post.data.description | truncate(100) }}
                    </p>
                    <div class="author-box mt-3 pt-3 border-top d-flex align-items-center">
                        <img src="https://ui-avatars.com/api/?name={{ post.data.author | urlencode }}" class="author-img rounded-circle me-2" alt="Author" width="30">
                        <span class="date-text small text-muted">{{ post.data.author }} &middot; {{ post.date | readableDate }}</span>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    {% if pagination.href.previous or pagination.href.next %}
    <nav class="pagination mt-5 d-flex justify-content-between align-items-center border-top pt-4">
        {% if pagination.href.previous %}
            <a href="{{ pagination.href.previous }}" class="btn btn-dark btn-sm">← Newer Posts</a>
        {% else %}
            <span></span>
        {% endif %}

        <span class="small text-muted text-uppercase">Page {{ pagination.pageNumber + 1 }}</span>

        {% if pagination.href.next %}
            <a href="{{ pagination.href.next }}" class="btn btn-dark btn-sm">Older Posts →</a>
        {% else %}
            <span></span>
        {% endif %}
    </nav>
    {% endif %}
</main>